# Update host statuses exery {{scan_minutes}} minutes
*/{{scan_minutes}} * * * * nginx /bin/php {{ipam_path}}/functions/scripts/pingCheck.php
*/{{scan_minutes}} * * * * nginx /bin/php {{ipam_path}}/functions/scripts/discoveryCheck.php

# Backup IP address table, remove backups older than 10 days
@daily nginx /usr/bin/mysqldump -u {{db_account}} -p{{db_password}} phpipam > {{ipam_path}}/db/bkp/phpipam_bkp_$(date +"\%y\%m\%d").db
@daily nginx /usr/bin/find {{ipam_path}}/db/bkp/ -ctime +10 -exec rm {} \;



